# Gmail Configuration
GMAIL_USER=your-email@gmail.com

# Google Sheets Configuration
SHEETS_ID=your-sheet-id-here
SHEET_NAME=Leads

# Email Search Query
# Examples:
# - subject:Nueva consulta
# - subject:Solicitud OR subject:Cotizacion
# - from:clientes@example.com
SEARCH_QUERY=subject:Nueva consulta OR subject:Solicitud

# Process Options
MARK_AS_READ=True
SEND_CONFIRMATION=False
CONFIRMATION_EMAIL=noreply@mycompany.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/lead_extractor.log

# Scheduling
RUN_EVERY_HOURS=1
